# BR Doc OCR - Environment Variables
# Copy this file to .env and adjust values as needed

# GPU Configuration
# Comma-separated list of GPU device IDs (e.g., "0" or "0,1")
CUDA_VISIBLE_DEVICES=0

# Database Configuration
# SQLite (development)
DATABASE_URL=sqlite:///./data/br_doc_ocr.db
# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/br_doc_ocr

# Model Cache Directory
# Where HuggingFace models are cached
MODEL_CACHE_DIR=./models

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# HuggingFace Configuration
# Optional: Set token for private models/datasets
# HF_TOKEN=hf_xxx

# Model Configuration
# Default model version to use
DEFAULT_MODEL_VERSION=latest

# Performance Configuration
# Maximum batch size for inference
MAX_BATCH_SIZE=4

# REST API Configuration (for 'serve' command)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
